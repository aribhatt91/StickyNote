<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:layout_margin="16dp"
        android:layout_above="@+id/sizeContainer"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Create new"
        android:autofillHints="Create"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_create_24"/>
    <LinearLayout
        android:id="@+id/sizeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/btnContainer"
        android:layout_marginStart="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="96dp">
        <Button
            android:id="@+id/decrSize"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="-"/>
        <TextView
            android:id="@+id/sizeTxt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text=""/>
        <Button
            android:id="@+id/incrSize"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="B"
            />
        <Button
            android:id="@+id/italic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="I"
            />
        <Button
            android:id="@+id/underline"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="U"
            />
    </LinearLayout>

</RelativeLayout>